<div class="container mt-4">
  <h1><%= @character.name.capitalize %></h1>

  <img class="w-25 rounded" src="<%= @character.img_url %>" alt="image of <%= @character.name %>">
  <p>📖 <%= @character.species %></p>
  <p>🌳 <%= @character.age %></p>

  <%= link_to 'Edit ✏️', edit_character_path(@character.id) %>
  <%= link_to 'Delete', character_path(@character.id), data: {turbo_method: :delete, turbo_confirm: "Are you suuuuuure, you want to delete #{@character.name}?"} %>

  <%= link_to root_path do %>
    🏠
  <% end %>
</div>

